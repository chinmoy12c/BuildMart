<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:id="@+id/orderItem">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/shoppingBag"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:src="@raw/shopping_bag"
            />

        <TextView
            android:id="@+id/orderTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/shoppingBag"
            android:layout_margin="20dp"
            android:text="5:56 pm, 15 Jan"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/moneyIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/shoppingBag"
            android:layout_below="@+id/orderTime"
            android:src="@raw/money"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/orderAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/moneyIcon"
            android:layout_below="@id/orderTime"
            android:layout_margin="10dp"
            android:text="Rs. 500"
            android:textSize="20sp"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/orderStatus"
            android:layout_alignParentEnd="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="5dp"
            android:src="#E8B243"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>