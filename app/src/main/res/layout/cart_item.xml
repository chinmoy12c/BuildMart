<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cartItemCard"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cartItemImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/cartItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/cartItemImage"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/saira_bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/multText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cartItemName"
            android:layout_margin="10dp"
            android:text="X"
            android:textSize="16sp"
            android:fontFamily="@font/saira_semi_bold"/>

        <TextView
            android:id="@+id/cartItemQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/multText"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/saira_bold"/>

        <TextView
            android:id="@+id/cartPriceTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/cartItemImage"
            android:layout_below="@+id/cartItemName"
            android:layout_marginStart="10dp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/removeFromCartButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_delete_black_24dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>